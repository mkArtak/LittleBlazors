@using LittleBlazors.Components.Charts.Interop;

@inject GoogleChartsInterop interop;

<div class="my-component">
    This Blazor component is defined in the <strong>LittleBlazors.Components.Charts</strong> package.
</div>

<div @ref="chartContainer" />
<div style="border: 1px solid red;" @ref="chartContainer2" />

@code {
    ElementRef chartContainer;
    ElementRef chartContainer2;

    protected override void OnInit()
    {

    }

    protected override async Task OnAfterRenderAsync()
    {
        await this.interop.InitializeCharts(chartContainer);
        await this.interop.InitializeCharts(chartContainer2);
    }
}