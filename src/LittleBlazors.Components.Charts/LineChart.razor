@using LittleBlazors.Components.Charts.Interop;
@using LittleBlazors.Components.Charts.Model;

@inject GoogleChartsInterop interop;

<div @ref="chartContainer" style="height: 100%; width: 100%;" />

@code{
    [Parameter] ChartData Data { get; set; }
    ElementRef chartContainer;

    protected override void OnInit()
    {

    }

    protected override async Task OnAfterRenderAsync()
    {
        await this.interop.DrawLineAsync(this.Data, chartContainer);
    }
}
