@using LittleBlazors.Components.Charts.Interop
@using LittleBlazors.Components.Charts.Model

@inject GoogleChartsInterop interop;

<div @ref="chartContainer" class="@ContainerClass" />

@code {
    [Parameter]
    public ChartData Data { get; set; }

    [Parameter]
    public string ContainerClass { get; set; }

    private ElementReference chartContainer;

    protected override void OnInitialized()
    {

    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await this.interop.DrawLineAsync(this.Data, chartContainer);
    }
}
